= provide(:title, "Geographical Observations")

%table.table.table-hover.table-striped#observations
  %thead
    %th
      Place
    %th
      Page
    %th
      Order in text
    %th
      Chapter
    %th
      Dialogue?
    %th
      Adjective?
    %th
      Not a place?
  %tbody
    - @observations.each do |observation|
      %tr
        %td
          = place_name(observation.place_id)
        %td
          = observation.page_number
        %td
          = observation.order_in_page
        %td
          = chapter_name(observation.chapter_id)
        %td
          = observation.dialogue
        %td
          = observation.adjective
        %td
          = observation.not_a_place
      %tr
        %td{colspan: 7}
          = observation.text